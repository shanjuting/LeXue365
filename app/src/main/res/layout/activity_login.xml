<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#CCCCCC"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/cuo"
            android:src="@mipmap/cancel"
            android:paddingTop="17dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="登录"
            android:textSize="25sp"
            android:paddingTop="10dp"
            android:paddingLeft="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="15dp"></LinearLayout>
    <LinearLayout
        android:background="#FFFFFF"
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:text="手机号登录"
            android:paddingLeft="150dp"
            android:textSize="20sp"
            android:textColor="#009966"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:paddingLeft="30dp"
                android:src="@mipmap/little_green_phone"
                android:paddingTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/shoujihao"
                android:paddingTop="25dp"
                android:paddingLeft="40dp"
                android:hint="请输入手机号"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/yanzhengma"
                android:text="获取验证码"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/shape2"
                android:layout_width="wrap_content"
                android:layout_height="60dp" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#CCCCCC" />
        <LinearLayout
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:paddingLeft="30dp"
                android:src="@mipmap/envelope_green"
                android:paddingTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/yanzhengma2"
                android:paddingTop="25dp"
                android:paddingLeft="40dp"
                android:hint="请输入验证码"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#CCCCCC" />
        <Button
            android:id="@+id/denglu"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/shape2"
            android:layout_width="330dp"
            android:layout_height="35dp" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:textColor="#CCCCFF"
            android:text="我已经阅读并同意《用户须知》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="140dp"
            android:text="用其他方式登录"
            android:textColor="#CCCCFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/weixin"
            android:text="微信一键登录"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/shape2"
            android:layout_width="330dp"
            android:layout_height="35dp" />
    </LinearLayout>
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>

</LinearLayout>